   <children>
      <Button fx:id="btnAgregarPersona" layoutX="47.0" layoutY="413.0" mnemonicParsing="false" onAction="#anadirPersona" prefHeight="26.0" prefWidth="162.0" text="Agregar Persona" />
      <TextField fx:id="txtNombre" layoutX="47.0" layoutY="107.0" />
      <TextField fx:id="txtApellido" layoutX="47.0" layoutY="214.0" />
      <TextField fx:id="txtEdad" layoutX="47.0" layoutY="323.0" />
      <Label layoutX="47.0" layoutY="75.0" text="Nombre" />
      <Label layoutX="47.0" layoutY="171.0" text="Apellido" />
      <Label layoutX="47.0" layoutY="289.0" text="Edad" />
      <Button fx:id="btnEdit" layoutX="245.0" layoutY="413.0" mnemonicParsing="false" onAction="#editarPersona" prefHeight="26.0" prefWidth="162.0" text="Editar Persona" />
      <Button fx:id="btnEliminar" layoutX="454.0" layoutY="413.0" mnemonicParsing="false" onAction="#deletePersona" prefHeight="26.0" prefWidth="162.0" text="Eliminar Persona" />
