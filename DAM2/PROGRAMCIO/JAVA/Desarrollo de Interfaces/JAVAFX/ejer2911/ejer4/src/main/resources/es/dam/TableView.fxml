        <columns>
          <TableColumn fx:id="columNombre" prefWidth="121.0" text="nombre" />
          <TableColumn fx:id="columApellido" prefWidth="109.0" text="apellido" />
            <TableColumn fx:id="columEdad" prefWidth="124.0" text="edad" />
        </columns>
      </TableView>
   </children>
</AnchorPane>
